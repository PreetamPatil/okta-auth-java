{{>../header}}

<body>
    <div class="container">
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">MFA SMS Activation: <small>{{factor.profile.phoneNumber}}</small></h3>
                    </div>
                    <div class="panel-body">
                        <form method="POST" accept-charset="UTF-8" role="form" action="/login/mfa/activate/sms">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Pass code" name="passCode" type="text">
                            </div>
                            {{>../csrf}}
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Submit">
                        </fieldset>
                        </form>
                        <form method="POST" accept-charset="UTF-8" role="form" action="/login/mfa/activate/sms/resend">
                            {{>../csrf}}
                            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Resend">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </body>

{{>../footer}}