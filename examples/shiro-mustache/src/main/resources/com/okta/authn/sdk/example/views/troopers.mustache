{{>header}}

 <body>
    <div class="container">
        <div class="row vertical-offset-100">

            <h1>Hello, {{subject.principal}}!</h1>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Stormtroopers</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                          <tr>
                             <th>ID</th>
                             <th>Type</th>
                             <th>Species</th>
                             <th>Planet Of Origin</th>
                          </tr>
                         </thead>
                        <tbody>
                          {{#stormtroopers}}
                          <tr>
                             <td><a href="/troopers/{{id}}">{{id}}</a></td>
                             <td>{{type}}</td>
                             <td>{{species}}</td>
                             <td>{{planetOfOrigin}}</td>
                          </tr>
                          {{/stormtroopers}}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
 </body>
{{>footer}}